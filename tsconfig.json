{
  "display": "Node LTS",
  "_version": "18.1.0",
  "compilerOptions": {
    "lib": [
      "es2023"
    ],
    "outDir": "dist",
    "module": "node16",
    "target": "es2022",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node16",
    "declaration": true,
    "declarationDir": "dist/types"
  },
  "include": [
    "src/**/*.ts",
    "src/template/**/*",
  ]
}